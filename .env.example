# Base portal URL
EFDA_BASE_URL=https://portal.eris.efda.gov.et/

# Add your credentials (do not commit .env)
EFDA_USERNAME=your_username
EFDA_PASSWORD=your_password

# Optional login selector overrides (portal UI can change)
EFDA_USERNAME_SELECTORS=input[placeholder='username' i]||input[name='username']||input[id='username']||input[type='email']||input[type='text']||input:not([type='password'])
EFDA_PASSWORD_SELECTORS=input[type='password']||input[placeholder='password' i]||input[name='password']||input[id='password']
EFDA_SUBMIT_SELECTORS=button:has-text('Login')||button[type='submit']||input[type='submit'][value='Login']||button:has-text('Sign in')
EFDA_IMPORTS_MENU_SELECTORS=a:has-text('IImport')||[role='link']:has-text('IImport')||text=IImport||text=Import
EFDA_PRODUCTS_TAB_SELECTORS=app-tabs >> text=Products||[role='tab']:has-text('Products')||text=Products
EFDA_SUPPLIERS_TAB_SELECTORS=app-tabs >> text=Suppliers||[role='tab']:has-text('Suppliers')||text=Suppliers
EFDA_IMPORTS_NEXT_PAGE_SELECTORS=button[aria-label='Next page']||[aria-label='Next']||button:has-text('Next')||a:has-text('Next')||.pagination-next a
EFDA_IMPORT_REFERENCE_PATTERN=\d+\s*\/\s*IP\s*\/\s*[A-Za-z0-9-]*
# Optional: set only if you know the post-login URL pattern, e.g. /dashboard
EFDA_POST_LOGIN_URL_CONTAINS=
EFDA_STRICT_LOGIN_CHECK=true

# Paths
EFDA_STORAGE_STATE_PATH=/Users/t/Developer/personal/efda-scraper/data/state/storage_state.json
EFDA_ENDPOINT_CATALOG_PATH=/Users/t/Developer/personal/efda-scraper/endpoints.catalog.json
EFDA_API_CAPTURE_PATH=/Users/t/Developer/personal/efda-scraper/data/state/api_capture.json
EFDA_API_ENDPOINTS_PATH=/Users/t/Developer/personal/efda-scraper/data/state/api_endpoints.json
EFDA_SQLITE_PATH=/Users/t/Developer/personal/efda-scraper/data/efda.sqlite3
EFDA_RAW_OUTPUT_DIR=/Users/t/Developer/personal/efda-scraper/data/raw

# Runtime
# Set false while running capture-api so you can see navigation.
EFDA_HEADLESS=true
EFDA_REQUEST_TIMEOUT_SECONDS=30
EFDA_PAGE_SIZE=100
EFDA_MAX_PAGES=100
EFDA_MAX_IMPORTS=0
EFDA_API_CAPTURE_DURATION_SECONDS=45

# Turso (cloud database sync)
TURSO_DATABASE_URL=libsql://your-db.turso.io
TURSO_AUTH_TOKEN=your_turso_token
